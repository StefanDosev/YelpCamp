<% layout('layout/boilerplate') %>
   
    <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="row">
            <h1 class="text-center">Edit Campground</h1>
            <div class="col-6 offset-3">
                <form action="/campgrounds" method="post">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" value="<%= camp.title %>" required>
                    </div>
                    <div  class="mb-3">
                        <label  class="form-label" for="location">Location</label>
                        <input class="form-control"  type="text" name="campground[location]" id="location" value="<%= camp.location %>" required>
                    </div>
                    <div  class="mb-3">
                        <label  class="form-label" for="image">Add images</label>
                       <input type="file" name="image" id="image" multiple>
                    </div>
                    <div class="mb-3">
                        <label for="price">Campground price</label>
                        <div class="input-group ">
                            <span class="input-group-text">$</span>
                            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" id="price" name="campground[price]" value="<%= camp.price %>" required>
                            <span class="input-group-text">.00</span>
                          </div>
                    </div>
                   
                    <div  class="mb-3">
                        <label  class="form-label" for="description">Description</label>
                        <textarea class="form-control"  type="text" name="campground[description]" id="description" required><%= camp.description %></textarea>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Add Campground</button>
                    </div>
                    
                    
            
                </form>
                <a href="/campgrounds">All campgrounds</a>
            </div>
        </div>
    </form>