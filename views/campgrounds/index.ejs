<% layout('layout/boilerplate') %>
    <h1>All Campgrounds</h1>
    <div><a href="/campgrounds/new">New campground</a></div>
  
        <% for( let camp of campgrounds ) { %>
          <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <% if (camp.images && camp.images.length > 0) { %>
                        <img class="img-fluid" src="<%= camp.images[0].url %>" alt="">
                      <% } else { %>
                        <p>No image available</p>
                      <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= camp.title %></h5>
                        <p class="card-text"><%= camp.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= camp.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">view <%= camp.title %></a>
                    </div>
                </div>
            </div>
          </div>
           
            <% } %>
  
    

    